<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <com.amap.api.maps.MapView
        android:id="@+id/mapView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reTitle" />

    <RelativeLayout
        android:id="@+id/reList"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/reTitle"
        android:background="@color/white"
        android:visibility="gone" >

        <LinearLayout
            android:id="@+id/llSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#EFEFEF" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/corner_edittext2"
                android:paddingLeft="10dp"
                android:paddingRight="10dp" >

                <ImageView
                    android:id="@+id/ivSearch"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/iv_search" />

                <EditText
                    android:id="@+id/etSearch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/ivSearch"
                    android:background="@color/transparent"
                    android:hint="请输入关键字"
                    android:textColor="@color/text_color3"
                    android:textColorHint="@color/text_color2"
                    android:textSize="@dimen/level_4" />
            </RelativeLayout>
        </LinearLayout>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/llSearch"
            android:cacheColorHint="@color/transparent"
            android:divider="#10000000"
            android:dividerHeight="0.5dp"
            android:listSelector="@color/transparent"
            android:overScrollMode="never"
            android:scrollbars="none" />
    </RelativeLayout>

    <include
        android:id="@+id/reTitle"
        layout="@layout/layout_title" />

    <ImageView
        android:id="@+id/ivList"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/reTitle"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/iv_warning_list_unselected" />

    <ImageView
        android:id="@+id/ivRefresh"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/ivList"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/iv_warning_refresh_unselected" />

</RelativeLayout>